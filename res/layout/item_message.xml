<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 用户头像及信息应该是从服务器传过来的 -->

    <ImageView
        android:id="@+id/item_message_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_portrait__1" />

    <TextView
        android:id="@+id/item_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_message_portrait"
        android:text="用户名" />

    <TextView
        android:id="@+id/item_message_lastmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_message_portrait"
        android:layout_toRightOf="@id/item_message_portrait"
        android:text="用户发送或接收的最后一条消息" />

    <TextView
        android:id="@+id/item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="昨天11:24" />

</RelativeLayout>