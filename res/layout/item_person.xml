<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    
    android:orientation="vertical">
    
     <!-- 用户头像及信息应该是从服务器传过来的 -->

    <ImageView
        android:id="@+id/item_person_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_portrait__1" />

    <TextView
        android:id="@+id/item_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_person_portrait"
        android:text="用户名" />

    <TextView
        android:id="@+id/item_person_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_person_portrait"
        android:layout_toRightOf="@id/item_person_portrait"
        android:text="备注" />

   

</RelativeLayout>
